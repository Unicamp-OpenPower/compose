#!/bin/bash

set -ex

ARCH=$(uname -m)

if [[ "$TRAVIS_OS_NAME" == "linux" ]]; then
    if [[ "$ARCH" == "ppc64le" ]]; then
        sudo pip install --upgrade pip tox-travis
        pip --version
    else
        sudo pip install --upgrade pip tox-travis
        pip --version
    fi
else
    sudo pip install --upgrade pip tox-travis
    pip --version
fi
